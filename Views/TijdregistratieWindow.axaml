<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Elumatec.Tijdregistratie.ViewModels;assembly=Elumatec.Tijdregistratie"
        xmlns:views="clr-namespace:Elumatec.Tijdregistratie.Views;assembly=Elumatec.Tijdregistratie"
        x:Class="Elumatec.Tijdregistratie.Views.TijdregistratieWindow"
        Width="950"
        Height="550"
        Title="Elumatec">

    <Window.DataTemplates>
        <!-- Map UserSelectionViewModel to UserSelectionView -->
        <DataTemplate DataType="vm:UserSelectionViewModel">
            <views:UserSelectionView />
        </DataTemplate>

        <!-- Map InterventieOverviewViewModel to InterventieOverview -->
        <DataTemplate DataType="vm:InterventieOverviewViewModel">
            <views:InterventieOverview />
        </DataTemplate>

        <!-- Map InterventieFormViewModel to InterventieFormView -->
        <DataTemplate DataType="vm:InterventieFormViewModel">
            <views:InterventieForm />
        </DataTemplate>
    </Window.DataTemplates>

    <!-- ContentControl hosts the CurrentView -->
    <ContentControl Content="{Binding CurrentView}" />

</Window>
